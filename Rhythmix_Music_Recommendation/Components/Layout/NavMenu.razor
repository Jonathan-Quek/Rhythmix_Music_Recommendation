@using Microsoft.AspNetCore.Components.Authorization
@implements IDisposable
@inject NavigationManager NavigationManager

<div class="horizontal-nav-bar">
    <div class="nav-content">
        <div class="nav-brand">
            <NavLink href="" class="logo-wrapper">
                <span class="bi bi-vinyl-fill logo-icon" aria-hidden="true"></span>
                <span class="logo-text">Rhythmix</span>
            </NavLink>
        </div>

        <ul class="nav-links-list">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
                </NavLink>
            </li>

            <AuthorizeView>
                <Authorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="profile">
                            <span class="bi bi-person-fill" aria-hidden="true"></span> @context.User.Identity?.Name
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="nav-link logout-btn">
                                <span class="bi bi-box-arrow-right"></span> Logout
                            </button>
                        </form>
                    </li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Account/Register">
                            <span class="bi bi-person-add" aria-hidden="true"></span> Register
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="Account/Login">
                            <span class="bi bi-person-fill-lock" aria-hidden="true"></span> Login
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/StaffPlaceholder">
                            <span class="bi bi-shield-lock-fill" aria-hidden="true"></span> Staff
                        </NavLink>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}