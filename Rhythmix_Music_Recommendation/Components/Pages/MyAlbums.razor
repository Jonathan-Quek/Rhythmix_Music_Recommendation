@page "/my-albums"
@using Rhythmix_Music_Recommendation.Services
@using Rhythmix_Music_Recommendation.Components.Domain
@rendermode InteractiveServer
@inject MusicDataService DataService

<PageTitle>My Albums</PageTitle>

<div style="margin-top: 10px; padding: 40px; font-family: sans-serif;">
    <h1 style="border-bottom: 2px solid #1DB954; padding-bottom: 10px;">My Albums</h1>

    @* Check if the private list is empty for this specific user/session *@
    @if (DataService.Albums == null || !DataService.Albums.Any())
    {
        <div style="margin-top: 50px; text-align: center; color: #555;">
            <i class="fa fa-id-card" style="font-size: 100px; color: #ddd;"></i>
            <p style="font-size: 1.5rem; margin-top: 20px;">Your private collection is empty.</p>
            <p>Head to the Home page to start creating albums!</p>
        </div>
    }
    else
    {
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 25px; margin-top: 30px;">
            @foreach (var album in DataService.Albums)
            {
                <div class="album-card" style="background: #121212; color: white; padding: 15px; border-radius: 8px; position: relative;">
                    <div style="position: absolute; top: 10px; right: 10px; display: flex; gap: 5px; z-index: 10;">
                        @* Edit Button - Green *@
                        <button @onclick="() => PrepareEdit(album)"
                                style="background: #1DB954; border: none; color: white; border-radius: 4px; padding: 5px; cursor: pointer;"
                                title="Edit Album">
                            <i class="fa fa-pencil"></i>
                        </button>

                        @* Delete Button - Red *@
                        <button @onclick="() => HandleDelete(album.Id)"
                                style="background: #dc3545; border: none; color: white; border-radius: 4px; padding: 5px; cursor: pointer;"
                                title="Delete Album">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>

                    <div style="width: 100%; aspect-ratio: 1/1; background: linear-gradient(135deg, #333, #111); display: flex; justify-content: center; align-items: center; border-radius: 4px;">
                        <i class="fa fa-id-card" style="font-size: 80px; color: #444; opacity: 0.5;"></i>
                    </div>

                    <h4 style="margin-top: 15px; margin-bottom: 5px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@album.Title</h4>
                    <p style="color: #1DB954; font-weight: bold; margin: 0;">@album.Artist</p>
                    <p style="color: #888; font-size: 0.8rem; margin-top: 5px; height: 2.4em; overflow: hidden;">@album.Bio</p>
                </div>
            }
        </div>
    }
</div>

@* --- EDIT MODAL --- *@
@if (isEditing)
{
    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); display: flex; justify-content: center; align-items: center; z-index: 1000;">
        <div style="background: white; padding: 30px; border-radius: 12px; width: 450px; color: black; box-shadow: 0 10px 40px rgba(0,0,0,0.5);">
            <h3 style="margin-top: 0; color: #1DB954; border-bottom: 1px solid #eee; padding-bottom: 10px;">Edit Album Details</h3>

            <div style="margin-top: 20px;">
                <label style="display: block; margin-bottom: 5px; font-weight: bold;">Album Title</label>
                <input @bind="editingAlbum.Title" style="width: 100%; margin-bottom: 15px; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" placeholder="Title" />

                <label style="display: block; margin-bottom: 5px; font-weight: bold;">Artist Name</label>
                <input @bind="editingAlbum.Artist" style="width: 100%; margin-bottom: 15px; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" placeholder="Artist" />

                <label style="display: block; margin-bottom: 5px; font-weight: bold;">Bio / Description</label>
                <textarea @bind="editingAlbum.Bio" style="width: 100%; height: 100px; margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; border-radius: 4px; resize: none;" placeholder="Bio"></textarea>
            </div>

            <div style="display: flex; gap: 10px; justify-content: flex-end;">
                <button @onclick="() => isEditing = false" style="background: #f0f0f0; color: #333; border: none; padding: 10px 25px; border-radius: 500px; cursor: pointer; font-weight: bold;">Cancel</button>
                <button @onclick="SaveChanges" style="background: #1DB954; color: white; border: none; padding: 10px 25px; border-radius: 500px; cursor: pointer; font-weight: bold;">Save Changes</button>
            </div>
        </div>
    </div>
}

@code {
    private bool isEditing = false;
    private Album editingAlbum = new();

    private void PrepareEdit(Album a)
    {
        // Creating a clone so the UI doesn't update until 'Save' is clicked
        editingAlbum = new Album
        {
            Id = a.Id,
            Title = a.Title,
            Artist = a.Artist,
            Bio = a.Bio
        };
        isEditing = true;
    }

    private void SaveChanges()
    {
        DataService.UpdateAlbum(editingAlbum);
        isEditing = false;
        StateHasChanged();
    }

    private void HandleDelete(Guid id)
    {
        DataService.DeleteAlbum(id);
        StateHasChanged();
    }
}
