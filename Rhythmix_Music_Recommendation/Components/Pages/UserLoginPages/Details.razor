@page "/userlogins/details"
@using Microsoft.EntityFrameworkCore
@using Rhythmix_Music_Recommendation.Components.Domain
@inject IDbContextFactory<Rhythmix_Music_Recommendation.Data.Rhythmix_Music_RecommendationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>UserLogin</h2>
    <hr />
    @if (userlogin is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@userlogin.Username</dd>
            <dd class="col-sm-10">@userlogin.Password</dd>
        </dl>
        <div>
            <a href="@($"/userlogins/edit?id={userlogin.Id}")">Edit</a> |
        </div>
    }
</div>

@code {
    private UserLogin? userlogin;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        userlogin = await context.UserLogin.FirstOrDefaultAsync(m => m.Id == Id);

        if (userlogin is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
