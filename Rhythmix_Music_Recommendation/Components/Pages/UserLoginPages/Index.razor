@page "/userlogins"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Rhythmix_Music_Recommendation.Components.Domain
@using Rhythmix_Music_Recommendation.Data
@implements IAsyncDisposable
@inject IDbContextFactory<Rhythmix_Music_Recommendation.Data.Rhythmix_Music_RecommendationContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="userlogins/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.UserLogin">
    <PropertyColumn Property="userlogin => userlogin.Username" />
    <PropertyColumn Property="userlogin => userlogin.Password" />

    <TemplateColumn Context="userlogin">
        <a href="@($"userlogins/edit?id={userlogin.Id}")">Edit</a> |
        <a href="@($"userlogins/details?id={userlogin.Id}")">Details</a> |
        <a href="@($"userlogins/delete?id={userlogin.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private Rhythmix_Music_RecommendationContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
