@page "/userregisters/delete"
@using Microsoft.EntityFrameworkCore
@using Rhythmix_Music_Recommendation.Components.Domain
@inject IDbContextFactory<Rhythmix_Music_Recommendation.Data.Rhythmix_Music_RecommendationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>UserRegister</h2>
    <hr />
    @if (userregister is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@userregister.Username</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Password</dt>
            <dd class="col-sm-10">@userregister.Password</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@userregister.Email</dd>
        </dl>

        <EditForm method="post" Model="userregister" OnValidSubmit="DeleteUserRegister" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(userregister is null)">Delete</button> |
            <a href="/userregisters">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private UserRegister? userregister;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        userregister = await context.UserRegister.FirstOrDefaultAsync(m => m.Id == Id);

        if (userregister is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteUserRegister()
    {
        using var context = DbFactory.CreateDbContext();
        context.UserRegister.Remove(userregister!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/userregisters");
    }
}
