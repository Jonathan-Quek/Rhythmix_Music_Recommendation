@page "/stafflogins/delete"
@using Microsoft.EntityFrameworkCore
@using Rhythmix_Music_Recommendation.Components.Domain
@inject IDbContextFactory<Rhythmix_Music_Recommendation.Data.Rhythmix_Music_RecommendationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>StaffLogin</h2>
    <hr />
    @if (stafflogin is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@stafflogin.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedAt</dt>
            <dd class="col-sm-10">@stafflogin.CreatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedAt</dt>
            <dd class="col-sm-10">@stafflogin.UpdatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@stafflogin.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@stafflogin.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="stafflogin" OnValidSubmit="DeleteStaffLogin" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(stafflogin is null)">Delete</button> |
            <a href="/stafflogins">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private StaffLogin? stafflogin;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        stafflogin = await context.StaffLogin.FirstOrDefaultAsync(m => m.Id == Id);

        if (stafflogin is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteStaffLogin()
    {
        using var context = DbFactory.CreateDbContext();
        context.StaffLogin.Remove(stafflogin!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/stafflogins");
    }
}
