@page "/stafflogins/create"
@using Microsoft.EntityFrameworkCore
@using Rhythmix_Music_Recommendation.Components.Domain
@inject IDbContextFactory<Rhythmix_Music_Recommendation.Data.Rhythmix_Music_RecommendationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Staff</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="StaffLogin" OnValidSubmit="AddStaffLogin" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="StaffLogin.Name" class="form-control" /> 
                <ValidationMessage For="() => StaffLogin.Name" class="text-danger" /> 
            </div>      
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <InputText id="password" @bind-Value="StaffLogin.Password" class="form-control" />
                <ValidationMessage For="() => StaffLogin.Password" class="text-danger" />
            </div>
                   
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>


@code {
    [SupplyParameterFromForm]
    private StaffLogin StaffLogin { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddStaffLogin()
    {
        using var context = DbFactory.CreateDbContext();
        context.StaffLogin.Add(StaffLogin);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/stafflogins");
    }
}
