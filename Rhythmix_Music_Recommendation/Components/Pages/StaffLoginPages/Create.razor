@page "/stafflogins/create"
@using Microsoft.EntityFrameworkCore
@using Rhythmix_Music_Recommendation.Components.Domain
@inject IDbContextFactory<Rhythmix_Music_Recommendation.Data.Rhythmix_Music_RecommendationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>StaffLogin</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="StaffLogin" OnValidSubmit="AddStaffLogin" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label> 
                <InputText id="name" @bind-Value="StaffLogin.Name" class="form-control" /> 
                <ValidationMessage For="() => StaffLogin.Name" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdat" class="form-label">CreatedAt:</label> 
                <InputDate id="createdat" @bind-Value="StaffLogin.CreatedAt" class="form-control" /> 
                <ValidationMessage For="() => StaffLogin.CreatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedat" class="form-label">UpdatedAt:</label> 
                <InputDate id="updatedat" @bind-Value="StaffLogin.UpdatedAt" class="form-control" /> 
                <ValidationMessage For="() => StaffLogin.UpdatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="StaffLogin.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => StaffLogin.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="StaffLogin.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => StaffLogin.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/stafflogins">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private StaffLogin StaffLogin { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddStaffLogin()
    {
        using var context = DbFactory.CreateDbContext();
        context.StaffLogin.Add(StaffLogin);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/stafflogins");
    }
}
